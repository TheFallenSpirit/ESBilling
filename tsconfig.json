{
	"tsc-alias": {
		"resolveFullPaths": true
	},
	"compilerOptions": {
		"strict": true,
		"baseUrl": ".",
		"outDir": "build",
		"target": "ES2022",
		"module": "ESNext",
		"skipLibCheck": true,
		"removeComments": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"moduleResolution": "Node"
	},
	"exclude": ["node_modules", "build"]
}